<script>

	$(document).keypress(function(e){
    if (e.which == 13){
        $("#submitbutton").click();
    }
  });
	
	function submitting(){
		if ($("#input").val() != ''){
			socket.emit('change', $("#input").val());
			$("#input").val('');
		}
		return false;
	}
</script>



